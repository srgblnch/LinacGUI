#!/bin/bash

. alba_blissrc

add2var PYTHONPATH $(CompOs ${SICILIA}/lib/python/site-packages)
export PYTHONPATH

APPNAME=ctlisetup

HOSTNAME=`hostname`
LOGDIR=/tmp/$APPNAME
if [ ! -d $LOGDIR ]; then
    mkdir -p $LOGDIR
fi
DATE=$(date +"%Y%m%d_%H%M%S")
LOGFILE=$LOGDIR"/"$DATE"_"$HOSTNAME"_"$USER".log"

pushd ${SICILIA}/lib/python/site-packages/$APPNAME
python $APPNAME.py 2>&1 |tee $LOGFILE
popd

